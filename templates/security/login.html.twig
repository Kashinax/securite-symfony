{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

  <div class="block-login">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <h1>Connexion !</h1>
        </div>
        <div class="col-6 text-center">
          <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
              <input placeholder="Adresse Email ..." required type="text" name="_username" class="form-control">
            </div>
            <div class="form-group">
              <input placeholder="Mot de passe ..." required type="password" name="_password" class="form-control">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
            <div>
              <a  href="{{ path('security_forgotten_password') }}">Forgotten password</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


{% endblock %}
