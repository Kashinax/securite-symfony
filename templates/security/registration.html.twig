{% extends 'base.html.twig' %}

{% block body %}
<div class="block-content">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>Inscription sur le site !</h1>
      </div>
      <div class="col-12">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username, 'Nom d\'utilisateur') }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Nom d \'utilisateur'} }) }}
            {{ form_help(form.username) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Adresse mail') }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse mail ...'} }) }}
            {{ form_help(form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password, 'Mot de passe') }}
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}
            {{ form_help(form.password) }}
        </div>
        <div class="form-group">
            {{ form_label(form.confirm_password, 'Confirmation du mot de passe') }}
            {{ form_errors(form.confirm_password) }}
            {{ form_widget(form.confirm_password, { 'attr': {'class': 'form-control', 'placeholder': 'Répétez votre mot de passe'} }) }}
            {{ form_help(form.confirm_password) }}
        </div>
        <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}
